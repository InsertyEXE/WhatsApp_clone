<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Zap_clone.FormInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Theme.Zap_clone.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16sp</item>
        <item name="android:background">@drawable/edit_text_form</item>
        <item name="android:textCursorDrawable">@drawable/cursor_form</item>
    </style>


    <style name="Theme.Zap_clone.LoadingButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_loading</item>
    </style>
</resources>